<!-- User's page header -->
<div class="row">
	<header>
		<div class="col-sm-2">
			<% unless @user.profile_picture_file_name.nil? %>
				<%= image_tag @user.profile_picture.url(:thumb), class: "img-thumbnail" %>
			<% else %>
				<a href="#" class="thumbnail">
					<img src="/assets/default_profile_pic.png" alt="User profile picture" class="img-thumbnail">
				</a>
			<% end %>
		</div>
		<div class="col-sm-6">
			<h1> <%= @user.fullname %> <%= link_to "@#{@user.username}", user_path(@user.username), class: "lead" %> </h1>
			<h2> <%= @user.nationality %> </h2>
			<p> <%= link_to "All info", user_info_path(@user.username) %> </p>
			<% if current_user_name %>
				<p> <%= link_to "Edit Profile", edit_user_path(current_user_name.username), class: "btn btn-default" %> </p>
			<% end %>
		</div>
	</header>
</div>

<h1 class="text-center"> Register in 10 seconds and start sharing your portfolio!</h1>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="col-sm-5 col-md-offset-3">
    <%= bootstrap_form_for @user, html: { multipart: true }, url: register_path do |f| %>
      <%= f.text_field :username %>
      <%= f.text_field :email %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation, label: "Confirm password" %>
      <%= f.file_field :logo %>
      <%= f.submit "Start enjoying!", class: "btn btn-success" %>
      <%= link_to "Cancel", root_path, class: "btn btn-default" %>
    <% end %>
  </div>
</div>